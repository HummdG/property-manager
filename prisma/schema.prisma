// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  OWNER
  TENANT
  TRADER
  ADMIN
  AGENT
}

enum InquiryType {
  RENT
  SALE
  MAINTENANCE
}

enum InquiryStatus {
  OPEN
  CONTACTED
  MEETING_SCHEDULED
  FOLLOW_UP
  ACCEPTED
  REJECTED
  CLOSED
}

enum ActivityType {
  CALL
  VIEWING
  MEETING
  SITE_VISIT
  PAPERWORK
  OTHER
}

enum SubscriptionStatus {
  TRIAL
  ACTIVE
  PAST_DUE
  CANCELLED
}

enum PropertyType {
  HOUSE
  APARTMENT
  CONDO
  TOWNHOUSE
  COMMERCIAL
  LAND
  OTHER
}

enum RequestStatus {
  PENDING
  ASSIGNED
  ACCEPTED
  REJECTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  PENDING_PAYMENT
  PAID
}

enum RequestPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

enum ListingType {
  RENT
  SALE
  BOTH
}

// Models
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  phone         String?
  image         String?
  role          UserRole  @default(OWNER)
  isActive      Boolean   @default(true)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts       Account[]
  sessions       Session[]
  properties     Property[]
  serviceRequests ServiceRequest[]
  traderProfile  TraderProfile?
  tenantProfile  TenantProfile?
  agentProfile   AgentProfile?
  jobAssignments JobAssignment[]
  payments       Payment[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Property {
  id          String       @id @default(cuid())
  name        String
  address     String
  city        String
  postcode    String
  country     String       @default("United Kingdom")
  type        PropertyType @default(HOUSE)
  listingType ListingType  @default(RENT)
  bedrooms    Int?
  bathrooms   Int?
  squareFeet  Int?
  description String?      @db.Text
  images      String[]
  isListed    Boolean      @default(false)
  monthlyRent Int?
  salePrice   Int?
  ownerId     String
  tenantId    String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  owner            User              @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  serviceRequests  ServiceRequest[]
  tenantProfiles   TenantProfile[]
  inquiries        Inquiry[]
  propertyListings PropertyListing[]
  documents        PropertyDocument[]

  @@map("properties")
}

model ServiceCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  icon        String?
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  serviceRequests ServiceRequest[]
  traderProfiles  TraderProfile[]

  @@map("service_categories")
}

model ServiceRequest {
  id           String          @id @default(cuid())
  title        String
  description  String          @db.Text
  status       RequestStatus   @default(PENDING)
  priority     RequestPriority @default(MEDIUM)
  propertyId   String
  categoryId   String
  requesterId  String
  scheduledFor DateTime?
  completedAt  DateTime?
  images       String[]
  notes        String?         @db.Text
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  // Relations
  property      Property        @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  category      ServiceCategory @relation(fields: [categoryId], references: [id])
  requester     User            @relation(fields: [requesterId], references: [id])
  jobAssignment JobAssignment?
  payments      Payment[]

  @@map("service_requests")
}

model TraderProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  companyName     String?
  description     String?  @db.Text
  hourlyRate      Int?
  isAvailable     Boolean  @default(true)
  rating          Float    @default(0)
  completedJobs   Int      @default(0)
  certifications  String[]
  serviceAreas    String[]
  contractorId    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user       User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  categories ServiceCategory[]
  contractor ContractorCompany? @relation(fields: [contractorId], references: [id])

  @@map("trader_profiles")
}

model TenantProfile {
  id           String    @id @default(cuid())
  userId       String    @unique
  propertyId   String?
  leaseStart   DateTime?
  leaseEnd     DateTime?
  rentAmount   Int?
  depositPaid  Int?
  emergencyContact String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  property Property? @relation(fields: [propertyId], references: [id])

  @@map("tenant_profiles")
}

model JobAssignment {
  id               String    @id @default(cuid())
  serviceRequestId String    @unique
  traderId         String
  assignedAt       DateTime  @default(now())
  acceptedAt       DateTime?
  startedAt        DateTime?
  completedAt      DateTime?
  rejectedAt       DateTime?
  rejectionReason  String?   @db.Text
  estimatedCost    Int?
  actualCost       Int?
  notes            String?   @db.Text
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  serviceRequest ServiceRequest @relation(fields: [serviceRequestId], references: [id], onDelete: Cascade)
  trader         User           @relation(fields: [traderId], references: [id])

  @@map("job_assignments")
}

model Payment {
  id               String        @id @default(cuid())
  serviceRequestId String
  userId           String
  amount           Int
  currency         String        @default("gbp")
  status           PaymentStatus @default(PENDING)
  stripePaymentId  String?
  stripeSessionId  String?
  description      String?
  paidAt           DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  // Relations
  serviceRequest ServiceRequest @relation(fields: [serviceRequestId], references: [id])
  user           User           @relation(fields: [userId], references: [id])

  @@map("payments")
}

model ContractorCompany {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  phone       String?
  address     String?
  description String?  @db.Text
  website     String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  traders TraderProfile[]

  @@map("contractor_companies")
}

model Contract {
  id           String    @id @default(cuid())
  companyId    String
  startDate    DateTime
  endDate      DateTime?
  terms        String?   @db.Text
  serviceTypes String[]
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("contracts")
}

// Agent Models
model AgentProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  companyName     String?
  licenseNumber   String?
  description     String?  @db.Text
  commissionRate  Float    @default(0)
  serviceAreas    String[]
  specializations String[]
  rating          Float    @default(0)
  completedDeals  Int      @default(0)
  isAvailable     Boolean  @default(true)
  tcAcceptedAt    DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  inquiries     Inquiry[]
  dailyLogs     AgentDailyLog[]
  locationLogs  AgentLocationLog[]
  subscription  AgentSubscription?

  @@map("agent_profiles")
}

model Inquiry {
  id            String        @id @default(cuid())
  type          InquiryType
  status        InquiryStatus @default(OPEN)
  source        String?       // Where inquiry came from (website, phone, referral, etc.)
  propertyId    String?
  agentId       String
  clientName    String
  clientEmail   String
  clientPhone   String?
  message       String?       @db.Text
  budget        Int?
  preferredArea String?
  notes         String?       @db.Text
  scheduledAt   DateTime?
  closedAt      DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  property  Property?        @relation(fields: [propertyId], references: [id])
  agent     AgentProfile     @relation(fields: [agentId], references: [id], onDelete: Cascade)
  followUps InquiryFollowUp[]

  @@map("inquiries")
}

model InquiryFollowUp {
  id          String       @id @default(cuid())
  inquiryId   String
  type        ActivityType
  title       String
  description String?      @db.Text
  outcome     String?      // Accepted, Rejected, Rescheduled, etc.
  scheduledAt DateTime?
  completedAt DateTime?
  notes       String?      @db.Text
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  inquiry Inquiry @relation(fields: [inquiryId], references: [id], onDelete: Cascade)

  @@map("inquiry_follow_ups")
}

model AgentDailyLog {
  id          String       @id @default(cuid())
  agentId     String
  type        ActivityType
  title       String
  description String?      @db.Text
  location    String?
  duration    Int?         // Duration in minutes
  date        DateTime     @default(now())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  agent AgentProfile @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@map("agent_daily_logs")
}

model AgentLocationLog {
  id        String   @id @default(cuid())
  agentId   String
  latitude  Float
  longitude Float
  address   String?
  accuracy  Float?
  timestamp DateTime @default(now())
  createdAt DateTime @default(now())

  // Relations
  agent AgentProfile @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@map("agent_location_logs")
}

model SubscriptionPlan {
  id                    String   @id @default(cuid())
  name                  String   @unique
  description           String?  @db.Text
  monthlyPrice          Int      // In cents
  yearlyPrice           Int?     // In cents (discounted)
  maxInquiries          Int?     // null = unlimited
  maxThirdPartyPlatforms Int     @default(0)
  features              String[]
  isActive              Boolean  @default(true)
  sortOrder             Int      @default(0)
  stripeProductId       String?
  stripePriceIdMonthly  String?
  stripePriceIdYearly   String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Relations
  subscriptions AgentSubscription[]

  @@map("subscription_plans")
}

model AgentSubscription {
  id                   String             @id @default(cuid())
  agentId              String             @unique
  planId               String
  status               SubscriptionStatus @default(TRIAL)
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  cancelAtPeriodEnd    Boolean            @default(false)
  stripeSubscriptionId String?
  stripeCustomerId     String?
  trialEndsAt          DateTime?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  // Relations
  agent AgentProfile     @relation(fields: [agentId], references: [id], onDelete: Cascade)
  plan  SubscriptionPlan @relation(fields: [planId], references: [id])

  @@map("agent_subscriptions")
}

model ThirdPartyPlatform {
  id             String   @id @default(cuid())
  name           String   @unique
  description    String?
  website        String?
  baseFee        Int?     // Monthly base fee in cents
  perListingFee  Int?     // Per property listing fee in cents
  logoUrl        String?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  propertyListings PropertyListing[]

  @@map("third_party_platforms")
}

model PropertyListing {
  id            String   @id @default(cuid())
  propertyId    String
  platformId    String
  externalId    String?  // ID on the third-party platform
  listingUrl    String?
  monthlyFee    Int      // Fee in cents
  status        String   @default("active") // active, paused, expired
  listedAt      DateTime @default(now())
  expiresAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  property Property           @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  platform ThirdPartyPlatform @relation(fields: [platformId], references: [id])

  @@unique([propertyId, platformId])
  @@map("property_listings")
}

// System Events / Audit Log
model SystemEvent {
  id        String   @id @default(cuid())
  type      String   // e.g. USER_REGISTERED, PROPERTY_CREATED, JOB_ASSIGNED, JOB_REJECTED
  action    String   // e.g. "created", "updated", "deleted", "rejected"
  entity    String   // e.g. "user", "property", "jobAssignment", "serviceRequest"
  entityId  String?
  userId    String?  // Who performed the action
  metadata  Json?    // Additional context (property name, rejection reason, etc.)
  createdAt DateTime @default(now())

  @@map("system_events")
}

// Property Documents (Deed, NOC)
model PropertyDocument {
  id         String   @id @default(cuid())
  propertyId String
  type       String   // "DEED" or "NOC"
  fileName   String
  fileUrl    String
  fileKey    String   // S3 key for deletion
  fileSize   Int?
  uploadedAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@unique([propertyId, type])
  @@map("property_documents")
}
