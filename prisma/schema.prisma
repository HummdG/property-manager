// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  OWNER
  TENANT
  TRADER
  ADMIN
}

enum PropertyType {
  HOUSE
  APARTMENT
  CONDO
  TOWNHOUSE
  COMMERCIAL
  LAND
  OTHER
}

enum RequestStatus {
  PENDING
  ASSIGNED
  ACCEPTED
  REJECTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  PENDING_PAYMENT
  PAID
}

enum RequestPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

enum ListingType {
  RENT
  SALE
  BOTH
}

// Models
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  phone         String?
  image         String?
  role          UserRole  @default(OWNER)
  isActive      Boolean   @default(true)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts       Account[]
  sessions       Session[]
  properties     Property[]
  serviceRequests ServiceRequest[]
  traderProfile  TraderProfile?
  tenantProfile  TenantProfile?
  jobAssignments JobAssignment[]
  payments       Payment[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Property {
  id          String       @id @default(cuid())
  name        String
  address     String
  city        String
  postcode    String
  country     String       @default("United Kingdom")
  type        PropertyType @default(HOUSE)
  listingType ListingType  @default(RENT)
  bedrooms    Int?
  bathrooms   Int?
  squareFeet  Int?
  description String?      @db.Text
  images      String[]
  isListed    Boolean      @default(false)
  monthlyRent Int?
  salePrice   Int?
  ownerId     String
  tenantId    String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  owner           User             @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  serviceRequests ServiceRequest[]
  tenantProfiles  TenantProfile[]

  @@map("properties")
}

model ServiceCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  icon        String?
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  serviceRequests ServiceRequest[]
  traderProfiles  TraderProfile[]

  @@map("service_categories")
}

model ServiceRequest {
  id           String          @id @default(cuid())
  title        String
  description  String          @db.Text
  status       RequestStatus   @default(PENDING)
  priority     RequestPriority @default(MEDIUM)
  propertyId   String
  categoryId   String
  requesterId  String
  scheduledFor DateTime?
  completedAt  DateTime?
  images       String[]
  notes        String?         @db.Text
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  // Relations
  property      Property        @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  category      ServiceCategory @relation(fields: [categoryId], references: [id])
  requester     User            @relation(fields: [requesterId], references: [id])
  jobAssignment JobAssignment?
  payments      Payment[]

  @@map("service_requests")
}

model TraderProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  companyName     String?
  description     String?  @db.Text
  hourlyRate      Int?
  isAvailable     Boolean  @default(true)
  rating          Float    @default(0)
  completedJobs   Int      @default(0)
  certifications  String[]
  serviceAreas    String[]
  contractorId    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user       User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  categories ServiceCategory[]
  contractor ContractorCompany? @relation(fields: [contractorId], references: [id])

  @@map("trader_profiles")
}

model TenantProfile {
  id           String    @id @default(cuid())
  userId       String    @unique
  propertyId   String?
  leaseStart   DateTime?
  leaseEnd     DateTime?
  rentAmount   Int?
  depositPaid  Int?
  emergencyContact String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  property Property? @relation(fields: [propertyId], references: [id])

  @@map("tenant_profiles")
}

model JobAssignment {
  id               String    @id @default(cuid())
  serviceRequestId String    @unique
  traderId         String
  assignedAt       DateTime  @default(now())
  acceptedAt       DateTime?
  startedAt        DateTime?
  completedAt      DateTime?
  estimatedCost    Int?
  actualCost       Int?
  notes            String?   @db.Text
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  serviceRequest ServiceRequest @relation(fields: [serviceRequestId], references: [id], onDelete: Cascade)
  trader         User           @relation(fields: [traderId], references: [id])

  @@map("job_assignments")
}

model Payment {
  id               String        @id @default(cuid())
  serviceRequestId String
  userId           String
  amount           Int
  currency         String        @default("gbp")
  status           PaymentStatus @default(PENDING)
  stripePaymentId  String?
  stripeSessionId  String?
  description      String?
  paidAt           DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  // Relations
  serviceRequest ServiceRequest @relation(fields: [serviceRequestId], references: [id])
  user           User           @relation(fields: [userId], references: [id])

  @@map("payments")
}

model ContractorCompany {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  phone       String?
  address     String?
  description String?  @db.Text
  website     String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  traders TraderProfile[]

  @@map("contractor_companies")
}

model Contract {
  id           String    @id @default(cuid())
  companyId    String
  startDate    DateTime
  endDate      DateTime?
  terms        String?   @db.Text
  serviceTypes String[]
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("contracts")
}
